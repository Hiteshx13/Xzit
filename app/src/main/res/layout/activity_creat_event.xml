                            android:layout_marginStart="20dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginEnd="20dp"
                            android:layout_marginBottom="15dp"
                            app:eventsEnabled="true"
                            app:type="one_day_picker" />

