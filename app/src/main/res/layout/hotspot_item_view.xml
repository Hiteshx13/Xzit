<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="@dimen/_280sdp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/backgoundleft">

        <RelativeLayout
            android:id="@+id/layoutTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgbackscreen"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_130sdp"
                android:scaleType="fitXY"
                android:src="@drawable/kizomba" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_130sdp"
                android:scaleType="fitXY"
                android:src="@drawable/bg_rectangle_overlay" />
        </RelativeLayout>

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20ssp"
            android:layout_marginLeft="@dimen/_20ssp"
            android:layout_marginTop="@dimen/_70sdp"
            android:fontFamily="@font/quicksand_bold"
            android:text="Bordelle"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/_12ssp" />

        <TextView
            android:id="@+id/tvAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtTitle"
            android:layout_marginStart="@dimen/_20ssp"
            android:layout_marginLeft="@dimen/_20ssp"
            android:layout_marginTop="@dimen/_5sdp"
            android:fontFamily="@font/quicksand_regular"
            android:text="Nightclub Bar, Terrace"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/_9ssp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvAddress"
            android:layout_marginStart="@dimen/_20ssp"
            android:layout_marginLeft="@dimen/_20ssp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_20ssp"
            android:fontFamily="@font/quicksand_regular"
            android:text="403 Ontario St E. Montreal Quebec H2L 1NS"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/_8ssp" />
    </RelativeLayout>
</layout>